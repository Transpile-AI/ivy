FROM ubuntu:20.04
WORKDIR /ivy

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get install -y python3 python3-pip python3-tk && \
    apt-get install -y libsm6 libxext6 libxrender-dev libgl1-mesa-glx && \
    apt-get install -y python-opengl && \
    apt-get install -y git && \
    apt-get install -y rsync && \
    apt-get install -y libusb-1.0-0 && \
    apt-get install -y libglib2.0-0 && \
    pip3 install --upgrade pip && \
    pip3 install setuptools==58.5.3

# Looks like there is a problem with installation of the following line, torch==1.11.0+cpu doesn't work with m1
RUN pip3 install torch==1.11.0 -f https://download.pytorch.org/whl/torch_stable.html
RUN pip3 install --upgrade torch-scatter -f https://pytorch-geometric.com/whl/torch-1.11.0+cpu.html

# Install Ivy Upstream
RUN git clone --recurse-submodules https://github.com/ZiadAmerr/ivy ivy && \
    cd ivy
RUN cat requirements/requirements.txt | grep -v "ivy-" | pip3 install --no-cache-dir -r /dev/stdin
RUN cat requirements/optional_m1_1.txt | grep -v "ivy-" | pip3 install --no-cache-dir -r /dev/stdin
RUN cat requirements/optional_m1_2.txt | grep -v "ivy-" | pip3 install --no-cache-dir -r /dev/stdin

RUN python3 -m pip install --user -e .
RUN cd ivy_tests/test_array_api
RUN pip3 install --no-cache-dir -r requirements.txt

# Install local requirements
COPY requirements/requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Install local optional
COPY requirements/optional_m1_1.txt .
COPY requirements/optional_m1_2.txt .
RUN pip3 install --no-cache-dir -r optional_m1_1.txt
RUN pip3 install --no-cache-dir -r optional_m1_2.txt

COPY run_tests_CLI/test_dependencies.py .
RUN python3 test_dependencies.py -fp requirements.txt, optional_m1_1.txt, optional_m1_2 && \
    rm -rf requirements.txt && \
    rm -rf optional_m1_1.txt && \
    rm -rf optional_m1_2.txt
